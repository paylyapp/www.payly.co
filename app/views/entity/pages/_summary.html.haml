%li.feed-item
  %figure
    = image_tag stack.primary_image.url(:tiny), :width => '42', :height => '42'
  %p
    - if stack.has_digital_download
      %i.icon-download-alt
    - else
      %i.icon-exchange
    #{stack.product_name}
  %ul
    %li
      = link_to edit_page_path(stack.stack_token) do
        %i.icon-cog
        Settings

    %li
      = link_to page_path(stack.stack_token) do
        %i.icon-money
        Purchases

    %li
      = link_to page_new_transaction_path(stack.page_token), :target => '_blank' do
        %i.icon-external-link
        View Page

    %li
      - if stack.visible
        %i.icon-eye-open
        Visible to public
      - else
        %i.icon-eye-close
        Visible only to you