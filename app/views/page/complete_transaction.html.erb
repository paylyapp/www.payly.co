<article>
  <header>
    <figure><%= image_tag @stack.primary_image.url(:medium) %></figure>
    <h1><%= @stack.product_name %> <i class="icon-lock"></i></h1>
    <p><%= @stack.description %></p>
  </header>

  <div class="success">
    <h1><i class="icon-ok"></i> Your purchase was successful</h1>
    <p>You should receive an email with the payment receipt <%= "and invoice" if @stack.send_invoice_email == true %> shortly.</p>
    <% unless @stack.return_url.blank? %>
    <p class="link"><%= link_to 'Return to website', @stack.return_url %></p>
    <% end %>
  </div>
</article>