!!! 5
%html.no-js{:lang=>"en"}
  %head
    %meta{ :charset => "utf-8" }/
    %title
      #{@pre_title + " • " unless @pre_title.nil?}Payly#{" • " + @post_title unless @post_title.nil?}

    %meta{:name=>"description",:content=>"Accept payments simply &amp; easily. The easiest way for Australians to accept payments in a few minutes."}/
    %meta{:name=>"viewport",:content=>"initial-scale=1, maximum-scale=1"}/

    = javascript_include_tag :modernizr
    = stylesheet_link_tag "application", :media => "all"

    %link{:rel=>"shortcut icon",:href=>"/favicon.ico"}
    = render 'layouts/apple-touch-images'

    %meta{:name=>"apple-mobile-web-app-capable",:content=>"yes"}/
    %meta{:name=>"apple-mobile-web-app-title",:content=>"Payly"}/

    = csrf_meta_tags

  %body

    .entity
      = render "entity/shared/header"
      .entity__content
        = render "entity/shared/notifications"
        = yield
      = render "entity/shared/footer"

    = javascript_include_tag "application"
    = analytics_init if Rails.env.production?